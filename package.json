{
  "name": "simple",
  "module": "app.tsx",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf static/ dist/ app",
    "dev": "concurrently \"bun run dev:*\"",
    "dev:app": "bun run --hot simple-dev.tsx",
    "dev:app:client": "bun build --target browser --outdir static --external __STATIC_CONTENT_MANIFEST --minify --watch simple-browser.tsx",
    "dev:css": "bunx tailwindcss -i ./main.css -o ./static/output.css --watch",
    "build": "bun run build:app:binary",
    "build:app:binary": "NODE_ENV=production bun build simple-binary.tsx --compile --minify --loader .txt=file --outfile app",
    "build:app:clients": "NODE_ENV=production bun build --target browser --outdir static --external __STATIC_CONTENT_MANIFEST --minify simple-browser.tsx",
    "build:app:css": "NODE_ENV=production bunx tailwindcss -i ./main.css -o ./static/output.css -m",
    "build:app:pages": "NODE_ENV=production bun build simple-cloudflare-pages.tsx --minify --outfile dist/_worker.js && cp -r static dist/static",
    "build:assets": "bun run build:app:css && bun run build:app:clients",
    "deploy:app:pages": "bun run wrangler pages deploy dist --env production --project-name app",
    "prebuild:app:binary": "bun run build:assets && cp static/simple-browser.js static/simple-browser.txt",
    "prebuild:app:pages": "bun run build:assets",
    "predeploy:app:pages": "bun run build:app:pages",
    "tauri": "tauri"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@cloudflare/workers-types": "^4.20231218.0",
    "@tauri-apps/cli": "^1.5.8",
    "@types/bun": "latest",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/wouter": "^2.2.0",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "wrangler": "^3.22.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@tauri-apps/api": "^1.5.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "hono": "^3.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.8.0",
    "wouter": "next"
  }
}
